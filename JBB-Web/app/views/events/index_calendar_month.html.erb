         <%= event.jbb_space_requested %>
       </div>
       <% end %>
       <% end %>
       <div class= "actions" >
        <%= link_to 'Criar evento', events_url, class: "btn btn-primary"%>
        <a id="calendar" >
          <%= link_to 'Voltar', home_url, class: "btn btn-primary"%>
        </div>
        <br>
      </div>
    </section>
  </body>
