<p id="notice"><%= notice %></p>
<body id="page-top">
  <head>
    <link href="vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="css/creative.css" rel="stylesheet">
  </head>
  <body id="aplication-body">
    <section id="services">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading">Informação do Evento</h2>
            <hr class="primary">
          </div>
        </div>
      </div>
  <div class="col-md-6 col-md-offset-3">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <b>Data e hora de início</b>
        <div class = "actions">
          <b>Dia: </b>
          <%= l(@event.date_start, format: :long) %>
        </div>
        <div class = "actions">
          <b>Hora: </b>
          <%= l(@event.time_start, format: :short) %>
        </div>
        <br>
        <b>Data e hora de fim</b>
        <div class = "actions">
          <b>Dia:</b>
          <%= l(@event.date_end, format: :long) %>
        </div>
        <div class = "actions">
          <b>Hora:</b>
          <%= l(@event.time_end, format: :short) %>
        </div>
        <br>
        <div class = "actions">
          <b>Status:</b>
          <%= @event.status %>
        </div>
        <br>
        <div class = "actions" >
          <b>Espaço solicitado:</b>
          <%= @event.jbb_space_requested%>
        </div>
        <br>
        <div class = "actions" >
          <b>Publico estimado:</b>
          <%= @event.estimated_public%>
        </div>
        <br>
        <div class= "actions spacing" >
          <b>Descrição:</b>
          <%= @event.description %>
        </div>
        <br>
        <div class = "actions" >
          <b>Espaço solicitado:</b>
          <%= @event.jbb_space_requested%>
        </div>
        <br>
        <div class = "actions" >
          <b>Publico estimado:</b>
          <%= @event.estimated_public%>
        </div>
        <br>
        <div class = "actions" >
          <b>Uso Comercial de imagem:</b>
          <%= @event.commercial_use_photos%>
        </div>
        <br>
        <table>
          <tr>
            <td>
              <div class = "actions" >
                <b>Precisa de energia elétrica?</b>
                <%= @event.need_eletricity%>
              </div>
            </td>
            <td>
              <div class = "actions" >
                &nbsp&nbsp&nbsp&nbsp
                <b>Precisa de água?</b>
                <%= @event.need_water%>
              </div>
            </td>
            <td>
              <div class = "actions" >
                &nbsp&nbsp&nbsp&nbsp
                <b>Precisa de servico de limpeza?</b>
                <%= @event.need_clean_service%>
              </div>
            </td>
          </tr>
        </table>
        <br>
        <div class= "actions sp" >
          <b>Outras informações:</b>
          <%= @event.other_informations %>
        </div>
        <br>
        <div class= "actions spacing" >
          <b>Uso comercial de imagens:</b>
          <%= @event.commercial_use_photos %>
        </div>
        <br>
        <div class= "actions spacing" >
          <b>Nome da instituição:</b>
          <%= @event.name_institute %>
        </div>
        <div class= "actions spacing" >
          <b>Endereço da instituição:</b>
          <%= @event.institute_address %>
        </div>
        <div class= "actions spacing" >
          <b>CNPJ da instituição:</b>
          <%= @event.institute_cnpj %>
        </div>
        <br> <p>
        <% if (@event.status <=> "Aguardando confirmacao") == 0 %>
          <%= link_to "Cancelar Evento", class: "btn btn-warning destroy-btn", controller: "events", action: "cancel_event_user", id: @event %>
        <% end %>
        <div class= "actions" >
          <b>Resposta do Jardim Botânico:</b>
          <%= @event.jbb_response_to_request%>
        </div>
        <div>
          <b>Pagamento:</b>
          <%= @event.price_payment%>
        </div>
        <% if (current_user.is_employee)%>
        <div class= "actions" >
          <a id="back_space" >
          <%= link_to 'Voltar', show_event_url, class: "btn btn-primary"  %>
        </div>
        <%else%>
        <div class= "actions" >
          <a id="back_space" >
          <%= link_to 'Voltar', show_event_user_url, class: "btn btn-primary"  %>
        </div>
        <%end%>
        <br>
        <br>
      </div>
    </div>
  </div>
</body>
