<body id="aplication-body">
    <br>
    <br>
    <br>
    <head>
      <link href="/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
      <link href="css/creative.css" rel="stylesheet">
    </head>
  <div class="container">
  	<div class="row">
      <div class="col-md-6 col-md-offset-3">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <div class="col-lg-12 text-center">
        <h2 class="section-heading"><%= t(:profile) %><%= @event.user.name %></h2>
        <hr class="primary">
      </div>
       <p>
        <b> <%= t(:email) %> </b>
        <%= @event.user.email %>
      </p>
      <p>
        <b> CPF: </b>
        <%= @event.user.cpf %>
      </p>
      <p>
        <b> <%= t(:phone) %> </b>
        <% @event.user.phones.each do |p| %>
          <%= p.phone %>
        <% end %>
      </p>
      <p>
        <b> <%= t(:gender) %> </b>
        <% if (@event.user.gender <=> "Feminino") == 0 %>
        <%= t(:female) %>
        <%end%>
        <% if (@event.user.gender <=> "Masculino") == 0 %>
        <%= t(:male) %>
        <%end%>
        <% if (@event.user.gender <=> "Outro") == 0 %>
        <%= t(:other) %>
        <%end%>
      </p>
      <p>
        <b> <%= t(:birth) %> </b>
        <%= l(@event.user.birth, format: :long) %>
      </p>
      <div class="actions">
      <%= link_to t(:back), "/#{I18n.locale}"+show_event_employee_path, :required => true, class: "btn btn-primary"%>
      </div>
      </div>
    </div>
  </div>
</body>
