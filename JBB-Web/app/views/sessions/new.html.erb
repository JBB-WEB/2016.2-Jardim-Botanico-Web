<body id="page-top">
  <br><br><br>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
        <div class="col-lg-12 text-center">
          <h2 class="section-heading"><%= t(:sign_in) %></h2>
          <hr class="primary">
        </div>
        <%= form_for :session, url: sign_in_path do |f| %>
        <div class="field">
         <%= f.label t(:email) %><br />t
         <%= f.email_field :email, autofocus: true, :required => true, id: "user_email", class: "form-control" %>
        </div>
        <br>
        <div class="field">
        <%= f.label t(:password) %><br />
        <%= f.password_field :password, autocomplete: "off", :required => true, id: "user_password",  class: "form-control" %>
        </div>
         <div class="checkbox">
          <label><input type="checkbox"><%= t(:remember_me) %></label>
        </div>
        <br>
        <div class="form-in line">
         <%= f.submit t(:sign_in), id:"entrar", class: "btn btn-primary" %>
          <a id="back_space" >
          <%= link_to t(:back), "/" + (@language).to_s + "/", class: "btn btn-primary" %>
        </div>
        <br>
        <%= link_to t(:sign_up_now), "/" + (@language).to_s + "/users/new" , class: "btn btn-warning destroy-btn"%>
        <%end%>
      </div>
    </div>
  </div>
</body>
