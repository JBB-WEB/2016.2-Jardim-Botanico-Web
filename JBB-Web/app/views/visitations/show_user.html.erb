<!DOCTYPE html>
<html lang="en">
<head>
  <link href="/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
  <link href="css/creative.css" rel="stylesheet">
</head>
<body id="aplication-body">
  <section id="services">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading"><%= t(:my_visitations) %></h2>
          <hr class="primary">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>"><%= value %></div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div class="col-md-10 col-md-offset-1">
    <div class="table-hover">
      <% if !@visitation.empty?%>
      <div class="table-hover">
        <table border=0 class="table" >
          <br /> <br />
          <tr>
            <th><%= t(:date_schedule) %></th>
            <th><%= t(:scheduled_period) %></td>
            <th><%= t(:status) %></th>
            <th><%= t(:number_visitors) %></th>
            <th><%= t(:number_paying_visitors) %></th>
            <th><%= t(:visit_price) %></th>
            <th><%= t(:description) %></th>
          </tr>
          <% @visitation.each do |visitation| %>
          <tr>
            <td> <%= l(visitation.date, format: :long) %> </td>
            <td> <%= visitation.period %> </td>
            <td> <%= visitation.status %> </td>
            <td> <%= visitation.visitants_amount %> </td>
            <td> <%= visitation.visitants_paying %> </td>
            <td> <%= visitation.visitation_cost %> </td>
            <td> <%= visitation.description %> </td>
            <td> <%= link_to t(:show), "/#{I18n.locale}/visitations/index_user?id=#{visitation.id}" %> </td>
            <% if (visitation.status <=> "Aguardando confirmacao") == 0 %>
            <td> <%= link_to t(:cancel_visit), controller: "visitations",
              action: "cancel_visitation_user", id: visitation %> </td>
              <% end %>
            </tr>
            <% end %>
          </table>
          <a id="show" >
          <%= link_to t(:back), "/#{@language}/users/my_requests/#{current_user.id}", class: "btn btn-primary" %>
              <a id="back_space_new" >
            <%= link_to t(:new_enviromental_education), "/#{@language}"+new_visitation_path, class: "btn btn-primary" %>
          <% else %>
          <div class="container">
            <div class="row">
              <h1><%= t(:no_scheduled_visits) %></h1>
            </div>
          </div>
          <br>
          <% end %>
        </div>
      </div>
    </div>
</body>
