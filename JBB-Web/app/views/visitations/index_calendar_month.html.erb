<body id="page-top">
  <head>
    <link href="vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="css/creative.css" rel="stylesheet">
  </head>
  <body id="aplication-body">
    <section id="services">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading"><%= t(:visit_calendar) %></h2>
            <hr class="primary">
          </div>
        </div>
      </div>
    <div class="col-md-6 col-md-offset-3">
    <div class="actions">
      <%= link_to t(:search_by_week), "/#{I18n.locale}"+show_visitation_calendar_week_path, class: "btn btn-primary"%>
    </div>
    <br>
      <%= month_calendar events: @visitations do |date, visitations| %>
      <b><%= date.strftime("%d") %></b>
      <% visitations.each do |visitation| %>
      <div>
          <%= visitation.description %>
      </div>
      <% end %>
      <% end %>
   <div class= "actions" >
      <%= link_to t(:create_visit), "/#{I18n.locale}"+new_visitation_path, class: "btn btn-primary"%>
    <a id="calendar" >
      <%= link_to t(:back), "/#{I18n.locale}", class: "btn btn-primary"%>
    </div>
    <br>
  </body>
</body>
