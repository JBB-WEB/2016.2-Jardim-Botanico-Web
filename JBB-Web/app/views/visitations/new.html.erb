<h1>Visitação</h1>

<%= form_for @visitation do |f| %>

<% if @visitation.errors.any? %>
              <div id="error_explanation">
                          <div class="alert-error">
                                     O formulário contém <%= pluralize(@visitation.errors.count, "erro") %>.
                          </div>
                          <ul>
                                     <% @visitation.errors.full_messages.each do |msg| %>
                                     <li><%= msg %></li>
                                     <% end %>
                          </ul>
              </div>
  <% end %>


  	<p>
	<div class = "field" >
		<%= f.label :Data %>
		<%= f.date_select(:date) %>
	</div>
	</p>

	<p>
	<div class = "field" >
		<%= f.label :Horario %>
		<%= f.time_select(:time, minute_step: 15)%>
	</div>
	</p>

	<p>
	<div class = "field" >
		<%= f.label :CPF %>
		<%= f.text_field :cpf%>
	</div>
	</p>

	<p>
	<div class = "field" >
		<%= f.label :Quantidade_de_Visitantes%>
		<%= f.number_field :visitants_amount %>
	</div>
	</p>

	<p>
	<div class = "field" >
		<%= f.label :Descrição %>
		<%= f.text_area :description, :cols => "50", :rows => "5"%>
	</div>
	</p>


	<p>
	<div class="actions">
		<%= f.submit "Cadastrar"%>
	</div>
	</p>

<% end %>
	