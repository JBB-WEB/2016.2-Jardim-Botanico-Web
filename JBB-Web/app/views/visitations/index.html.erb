<body>
    <head>
      <link href="vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
      <link href="css/creative.css" rel="stylesheet">
    </head>
    <body id="aplication-body">
      <section id="services">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 text-center">
              <h2 class="section-heading">Informação de Visita</h2>
              <hr class="primary">
            </div>
          </div>
        </div>
  <div class="col-md-6 col-md-offset-3">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <br>
        <div class = "actions" >
          <b>Dia:</b>
          <%= @visitation.date.strftime("%d/%m/%Y") %>
        </div>
        <br>
        <div class = "actions" >
          <b>Hora:</b>
          <%= @visitation.time.to_s(:time) %>
        </div>
        <br>
        <div class = "actions" >
          <b>Status:</b>
          <%= @visitation.status %>
        </div>
        <br>
        <div class = "actions" >
          <b>Quantidade de Visitantes:</b>
          <%= @visitation.visitants_amount %>
        </div>
        <br>
        <div class = "actions" >
          <b>Quantidade de Visitantes Pagantes:</b>
          <%= @visitation.visitants_paying %>
        </div>
        <br>
        <div class = "actions" >
          <b>Preço da Visita:</b>
          <%= @visitation.visitation_cost %>
        </div>
        <br>
        <div class= "actions" >
          <b>Descrição:</b>
          <%= @visitation.description %>
        </div>

        <br> <p>
        <% if (current_user.is_employee)%>
        <div class= "actions" >
         <%= link_to 'Voltar', show_visitation_url, class: "btn btn-primary"  %>
       </div>
       <%else%>
       <div class= "actions" >
        <%= link_to "Gerar PDF", visitations_path(format: 'pdf', :id => @visitation.id), class: "btn btn-primary"%>
        <a id="back_space_new" >
        <%= link_to 'Voltar', show_visitation_user_url, class: "btn btn-primary"  %>
        <% if (@visitation.status <=> "Aguardando confirmacao") == 0 %>
        <a id="back_space_new" >
        <br><br>
           <%= link_to "Cancelar Visita", get_cancel_visitation_user_url(:id => @visitation.id), class: "btn btn-warning destroy-btn" %>
        <% end %>
       </div>
       <%end%>
     </div>
   </div>
 </div>
</body>
