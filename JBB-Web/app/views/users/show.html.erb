<body id="aplication-body">
    <br>
    <br>
    <br>
    <head>
      <link href="vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
      <link href="css/creative.css" rel="stylesheet">
    </head>
  <div class="container">
  	<div class="row">
      <div class="col-md-6 col-md-offset-3">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Perfil de <%= current_user.name %></h2>
        <hr class="primary">
      </div>
       <p>
        <b> Email: </b>
        <%= current_user.email %>
      </p>
      <p>
        <b> CPF: </b>
        <%= current_user.cpf %>
      </p>
      <p>
        <b> Telefone: </b>
        <% current_user.phones.each do |p| %>
          <%= p.phone %>
        <% end %>
      </p>
      <p>
        <b> GÃªnero: </b>
        <%= current_user.gender %>
      </p>
      <p>
        <b> Data de Nascimento: </b>
        <%= current_user.birth %>
      </p>
      <div class="actions">
        <%= link_to "Editar", user_edit_path(current_user), class: "btn btn-primary" %>
        <a id="space" >
        <%= link_to "Voltar", home_path, class: "btn btn-primary" %>
        <a id="new" >
        <%= link_to "Excluir minha conta", current_user, method: :delete, data: { confirm: "Tem certeza que deseja excluir sua conta?" }, class: "btn btn-warning destroy-btn"%>
      </div>
      </div>
    </div>
  </div>
</body>
