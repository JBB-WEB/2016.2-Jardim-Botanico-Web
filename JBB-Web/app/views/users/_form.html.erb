<body id="page-top">

	<br>
	<br>

	<div class="col-md-6 col-md-offset-3">
		<div class="container">
			<div class="row">
				<h1>Cadastro de Usuários</h1>
			</div>
		</div>
	</div>
	<div class="col-md-6 col-md-offset-3">
		<div class = "container">
			<p>Preencha as informações abaixo:</p>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= form_for @user do |f| %>
					<% if @user.errors.any? %>
						<div id="error_explanation">
							<div class="alert-error">
								O formulário contém <%= pluralize(@user.errors.count, "erro") %>.
							</div>
							<ul>
								<% @user.errors.full_messages.each do |msg| %>
									<li><%= msg %></li>
								<% end %>
							</ul>
						</div>
					<% end %>
					<div class="field">
						<%= f.label :Nome %>
						<%= f.text_field :name, :required => true, class: 'form-control' %>
					</div>
					<br>
					<div class="field">
						<%= f.label :Email %>
						<%= f.email_field :email, :required => true, class: 'form-control'%>
					</div>
					<br>
					<div class="field">
						<%= f.label :Senha %>
						<%= f.password_field :password_digest, :required => true, class: 'form-control' %>
					</div>
					<!--  <div class="field">
			<%= f.label :Confirmação_de_senha %>
			<%= f.password_field :password_confirmation %>
			</div> -->
			<br>
			<div class="field">
				<%= f.label :CPF %>
				<%= f.text_field :cpf, :required => true, class: 'form-control' %>
			</div>
			<%= f.fields_for :phones do |ff| %>
				<div class="field">
					<%= ff.label :Telefone %>
					<%= ff.text_field :phone, :required => true, id: 'telefone', class: 'form-control', placeholder: '(00) 00000-0000' , maxlength: '15'%>
				</div>
			<% end %>
			<br>
			<br>
			<!-- <div class="field">
				<%= f.label :Gênero %>
				<%= f.select 'gender', options_for_select(["", "Feminino", "Masculino"]), :select => params[:gender], :required => true, class: 'form-control'%>
			</div> -->
			 <div class="form-group">
		    <label for="gender">Gênero</label>
		    <select class="form-control" id="exampleSelect1">
		      <option> </option>
		      <option>Feminino</option>
		      <option>Masculino</option>
		    </select>
		  </div>
			<br>
			<label> Data de Nascimento: </label>
			<td align="left">
			</td>
			<tr>
			</tr>
			<td>
				<%= f.text_field :birth, :required => true, class: 'form-control' %>

				<br>
				<div class="actions">
					<%= f.submit "Cadastrar", class: "btn btn-primary"%>
					<%= link_to "Bem Vindos!", home_path %>
				</div>
			<% end %>
			</div>
		</div>
	</div>
</body>
