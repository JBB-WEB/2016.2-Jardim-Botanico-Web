					</div>
					<br>
					<div class="field">
						<%= f.label :Senha %>
						<%= f.password_field :password_digest, :required => true, class: 'form-control' %>
					</div>
			<br>
			<div class="field">
				<%= f.label :CPF %>
				<%= f.text_field :cpf, :required => true, class: 'form-control' %>
			</div>
			<br>
			<div class="field">
				<%= f.label :Telefone %>
				<%= f.text_field :phone, :required => true, class: 'form-control' %>
