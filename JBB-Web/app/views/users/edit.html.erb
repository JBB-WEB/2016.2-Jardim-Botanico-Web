<body id="aplication-body">
	<br>
	<br>

	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Atualize seu perfil</h1>
			</div>
		</div>
	</div>
	<div class = "container">
		<div class = "row">
			<div class="col-md-6 col-md-offset-3">
				<p>Preencha as informações abaixos:</p>
			</div>
		</div>

		<div class="container">
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<%= form_for @user do |f| %>
					<% if @user.errors.any? %>
					<div id="error_explanation">
						<div class="alert-error">
							O formulário contém <%= pluralize(@user.errors.count, "erro") %>.
						</div>
						<ul>
							<% @user.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
					<% end %>
					<div class="field">
						<%= f.label :Nome %>
						<%= f.text_field :name, :required => true, class: 'form-control' %>
					</div>
					<br>
					<div class="field">
						<%= f.label :Email %>
						<%= f.email_field :email, :required => true, class: 'form-control'%>
					</div>
					<br>
					<div class="field">
						<%= f.label :Senha %>
						<%= f.password_field :password_digest, :required => true, class: 'form-control' %>
					</div>
					<br>
					<div class="field">
						<%= f.label :CPF %>
						<%= f.text_field :cpf, :required => true, class: 'form-control' %>
					</div>
					<br>
					<div class="field">
						<%= f.label :Telefone %>
						<%= f.text_field :phone, :required => true, class: 'form-control' %>
					</div>
					<br>
					<div class="form-group">
						<label for="gender">Gênero</label>
						<%= f.select :gender, ["", "Feminino", "Masculino", "Outro"], :required => true, class: 'form-control' %>
					</div>
					<br>
					<label> Data de Nascimento: </label>
					<td align="left">
					</td>
					<tr>
					</tr>
					<td>
						<%= f.text_field :birth, :required => true, class: 'form-control' %>
						<br>
						<div class="actions">
							<%= f.submit "Atualizar", class: "btn btn-primary"%>
							<%= link_to "Voltar", home_path, class: "btn btn-primary.focus" %>
							</div><br>
						<%= form_for(@user, :url => { :action => "destroy", params: {id: @user.id}} ) do |f| %>
						<%= f.submit "Excluir minha conta", data: { confirm: "Tem certeza que deseja excluir sua conta?" }, class: "btn btn-warning destroy-btn"%>
						<% end %>
						<% end %>
					</td>
				</div>
			</div>
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	</body>